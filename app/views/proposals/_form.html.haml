 form_for @proposal do |f|
  -if @proposal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@proposal.errors.count, "error")} prohibited this proposal from being saved:"
      %ul
        - @proposal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :speaker_name
    = f.text_field :speaker_name
  .field
    = f.label :speaker_email
    = f.text_field :speaker_email
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :abstract
    = f.text_area :abstract
  .actions
    = f.submit 'Save'
